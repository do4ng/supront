    "module": "es2020",
    "target": "es2015",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["packages"],
  "exclude": ["packages/**/dist", "**/node_modules"]
}
